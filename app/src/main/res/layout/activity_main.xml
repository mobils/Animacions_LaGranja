<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animació i música"
        android:textSize="30sp"/>

    <LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#C000C0"
                android:contentDescription="@string/descripcio"
                android:padding="3dp"
                android:clickable="true"
                android:onClick="onClickImatgeAnimal"
                android:src="@drawable/anec" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cat"
                android:background="#C0C000"
                android:padding="3dp"
                android:clickable="true"
                android:onClick="onClickImatgeAnimal"
                android:contentDescription="@string/descripcio" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cavall"
                android:background="#00C0C0"
                android:padding="3dp"
                android:clickable="true"
                android:onClick="onClickImatgeAnimal"
                android:contentDescription="@string/descripcio" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/gos"
                android:background="#00C000"
                android:padding="3dp"
                android:clickable="true"
                android:onClick="onClickImatgeAnimal"
                android:contentDescription="@string/descripcio" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/porc"
                android:background="#0000C0"
                android:padding="3dp"
                android:clickable="true"
                android:onClick="onClickImatgeAnimal"
                android:contentDescription="@string/descripcio" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/vaca"
                android:background="#C00000"
                android:padding="3dp"
                android:clickable="true"
                android:onClick="onClickImatgeAnimal"
                android:contentDescription="@string/descripcio" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animació per fotogrames"
        android:textSize="30sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imatges de: https://www.freepik.com/vectors/frame"></TextView>

</LinearLayout>